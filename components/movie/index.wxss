/* components/movie/index.wxss */
.movie-container {
  width: 210rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.poster {
  width: 100%;
  height: 300rpx;
}

.name {
  width: 210rpx;
  margin: 20rpx 0;
  font-size: 28rpx;
  text-align: center;
  color: #ddd;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.num {
  margin-left: 20rpx;
  font-weight: bold;
  color: #000;
  font-size: 24rpx;
}