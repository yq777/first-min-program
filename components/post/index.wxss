.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-top: 2rpx solid #ededed;
  border-bottom: 2rpx solid #ededed;
}

.post-head {
  padding: 10rpx 0;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.post-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #000;
}

.post-content-img {
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  line-height: 40rpx;
  letter-spacing: 4rpx;
}

.post-footer {
  display: flex;
  align-items: center;
}

.post-num {
  font-size: 26rpx;
  margin-left: 16rpx;
  margin-right: 20rpx;
}